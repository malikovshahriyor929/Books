enum UserRole {
  USER
  AUTHOR
  ADMIN
}

enum BookStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum BookVisibility {
  PUBLIC
  UNLISTED
  PRIVATE
}

enum Monetization {
  FREE
  BUY_ONLY
  RENT_ONLY
  BUY_AND_RENT
}

enum OrderType {
  BUY
  RENT
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
  REFUNDED
}

enum AccessType {
  FREE
  PURCHASED
  RENTED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  authorProfile   AuthorProfile?
  authoredBooks   Book[]            @relation("AuthorBooks")
  reviews         Review[]
  orders          Order[]
  accesses        BookAccess[]
  readingProgress ReadingProgress[]

  @@index([role])
}

model Token {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model AuthorProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  penName   String?
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Book {
  id               String         @id @default(cuid())
  authorId         String
  title            String
  description      String?
  coverUrl         String?
  language         String?
  status           BookStatus     @default(DRAFT)
  visibility       BookVisibility @default(PUBLIC)
  monetization     Monetization   @default(FREE)
  buyPriceCents    Int?
  rentPriceCents   Int?
  currency         String         @default("USD")
  rentDurationDays Int?
  publishedAt      DateTime?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  author   User         @relation("AuthorBooks", fields: [authorId], references: [id], onDelete: Restrict)
  chapters Chapter[]
  tags     BookTag[]
  reviews  Review[]
  orders   Order[]
  accesses BookAccess[]

  @@index([authorId])
  @@index([status])
  @@index([visibility])
  @@index([monetization])
}

model Chapter {
  id         String   @id @default(cuid())
  bookId     String
  title      String
  order      Int
  content    String?
  contentUrl String?
  isPreview  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  book       Book              @relation(fields: [bookId], references: [id], onDelete: Cascade)
  progresses ReadingProgress[]

  @@unique([bookId, order])
  @@index([bookId])
}

model Tag {
  id    String    @id @default(cuid())
  name  String    @unique
  slug  String    @unique
  books BookTag[]
}

model BookTag {
  bookId String
  tagId  String

  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([bookId, tagId])
  @@index([tagId])
}

model Review {
  id        String   @id @default(cuid())
  bookId    String
  userId    String
  rating    Int
  title     String?
  body      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([bookId, userId])
  @@index([bookId])
  @@index([userId])
}

model Order {
  id          String      @id @default(cuid())
  userId      String
  bookId      String
  type        OrderType
  status      OrderStatus @default(PENDING)
  amountCents Int
  currency    String      @default("USD")
  provider    String?
  providerRef String?
  createdAt   DateTime    @default(now())
  paidAt      DateTime?

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  book     Book         @relation(fields: [bookId], references: [id], onDelete: Restrict)
  accesses BookAccess[]

  @@index([userId])
  @@index([bookId])
  @@index([status])
}

model BookAccess {
  id         String     @id @default(cuid())
  userId     String
  bookId     String
  accessType AccessType
  startAt    DateTime
  endAt      DateTime?
  orderId    String?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  book  Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)
  order Order? @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@unique([userId, bookId, accessType, startAt])
  @@index([userId, bookId])
  @@index([endAt])
}

model ReadingProgress {
  id        String   @id @default(cuid())
  userId    String
  chapterId String
  percent   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId])
  @@index([userId])
  @@index([chapterId])
}
